<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/bottomSheetLayout"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                app:behavior_hideable="true"
                app:behavior_peekHeight="285dp"
                app:layout_behavior="@string/bottom_sheet_behavior">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:layout_height="390dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        android:id="@+id/bottom_cv"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="true">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
            android:id="@+id/bottom_sheet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广药教学楼停车场"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textSize="23dp"
            android:layout_alignBottom="@+id/bottom_sheet_button_back"
            android:layout_centerHorizontal="true"/>


            <RelativeLayout

                android:layout_width="280dp"

                android:layout_height="45dp"

                android:id="@+id/relativeLayout"
                android:layout_marginTop="210dp"
                android:layout_below="@+id/bottom_sheet_button_back"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView

                    android:layout_width="10dp"

                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    app:srcCompat="@drawable/qmui_switch_thumb_checked"/>

            <TextView

            android:id="@+id/bottom_sheet_address"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_centerVertical="true"

            android:layout_marginLeft="45dp"
            android:text="中山市五桂山街道广东药科大学"/>


            </RelativeLayout>

            <RelativeLayout

            android:layout_width="280dp"

            android:layout_height="25dp"

            android:id="@+id/relativeLayout2"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

                <ImageView

                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    app:srcCompat="@drawable/qmui_tips_point"/>

            <TextView

            android:id="@+id/bottom_sheet_phone"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_centerVertical="true"

            android:layout_marginLeft="45dp"
            android:text="86-13801234567"/>


            </RelativeLayout>

            <RelativeLayout

                android:layout_width="280dp"

                android:layout_height="45dp"

                android:id="@+id/relativeLayout3"
                android:layout_below="@+id/relativeLayout2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:text="总车位:"/>

            <TextView

            android:id="@+id/bottom_sheet_zcw"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_centerVertical="true"

            android:layout_marginLeft="67dp"
            android:text="10"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:text="空车位:"/>

            <TextView

            android:id="@+id/bottom_sheet_kcw"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_centerVertical="true"

            android:layout_marginLeft="150dp"
            android:text="8"/>


            </RelativeLayout>

            <Button
                android:id="@+id/bottom_sheet_button_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/close_96"
                android:layout_alignParentLeft="true"/>


                <ImageView
                    android:id="@+id/bottom_sheet_image"
                    android:layout_height="180dp"
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:src="@drawable/bt_bottom_sheet"
                    />

            <Button
                android:id="@+id/bottom_sheet_parking"
                android:layout_width="60dp"
                android:layout_height="103dp"
                android:layout_marginBottom="6dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/green_teal"
                android:textColor="#ffffff"
                android:text="停车"
                android:textSize="18sp"/>
            <!--</android.support.v7.widget.CardView>-->

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.design.widget.FloatingActionButton

        android:id="@+id/bottom_fab"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignRight="@id/bottom_cv"

        android:layout_alignTop="@id/bottom_cv"

        android:layout_marginRight="25dp"

        android:layout_marginTop="-20dp"

        android:src="@drawable/navigation_96"

        app:backgroundTint="#ffffffff"
        app:fabSize="normal"/>

</RelativeLayout>