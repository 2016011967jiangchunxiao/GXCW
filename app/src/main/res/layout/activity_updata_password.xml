<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rw_l.gxcw.user.UpdataPasswordActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_updata_password"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp">

            <android.support.design.widget.TextInputLayout

                android:textColorHint="#c5c5c5"

                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <EditText

                    android:textSize="16sp"

                    android:hint="原密码"

                    android:textColor="#2fa881"

                    android:id="@+id/password_updata_origin"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:inputType="textPassword"

                    android:background="@drawable/selector_bg_edit"

                    android:textCursorDrawable="@drawable/bg_input_cursor"

                    />

            </android.support.design.widget.TextInputLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp">

            <android.support.design.widget.TextInputLayout

                android:textColorHint="#c5c5c5"

                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <EditText

                    android:textSize="16sp"

                    android:hint="新密码"

                    android:textColor="#2fa881"

                    android:id="@+id/password_updata_new"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:inputType="textPassword"

                    android:background="@drawable/selector_bg_edit"

                    android:textCursorDrawable="@drawable/bg_input_cursor"

                    />

            </android.support.design.widget.TextInputLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp">

            <android.support.design.widget.TextInputLayout

                android:textColorHint="#c5c5c5"

                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <EditText

                    android:textSize="16sp"

                    android:hint="确认新密码"

                    android:textColor="#2fa881"

                    android:id="@+id/password_updata_new_again"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:inputType="textPassword"

                    android:background="@drawable/selector_bg_edit"

                    android:textCursorDrawable="@drawable/bg_input_cursor"

                    />

            </android.support.design.widget.TextInputLayout>


        </RelativeLayout>




        <Button

            android:layout_marginTop="18dp"

            android:layout_gravity="center_horizontal"

            android:id="@+id/bt_updata_password_done"

            android:background="@drawable/bt_shape"

            android:stateListAnimator="@drawable/state_list_animator_z"

            android:layout_width="150dp"

            android:layout_height="50dp"

            android:text="确认更改"

            >
        </Button>


    </LinearLayout>



</RelativeLayout>
